{
    "include": ["**/*.*"],
    "exclude": ["node_modules", "**/*.spec.ts", "./vscode", "./build", "./data", "./docs"],
    "compilerOptions": {
       "target": "esnext",
       "module": "commonjs",
       "rootDir": "./",
       "outDir": "./build",
       "esModuleInterop": true,
       "declaration": true,
       "strict": false,
       "allowJs": true,
       "noImplicitAny": true,
       "strictNullChecks": true,
       "strictFunctionTypes": true,
       "strictBindCallApply": true,
       "strictPropertyInitialization": true,
       "noImplicitThis": true,
       "alwaysStrict": true,
       "typeRoots": ["./node_modules/@types", "./typings"],
       "sourceMap": true,
       "resolveJsonModule": true
    }
} 